{
    "compileOnSave": false,
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "tmp",
        "target": "ES5",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "compilerpaths/*": [ "src/typescript/compiler-paths/*" ]
        },
        "types" : [
            "codemirror",
            "core-js",
            "jasmine",
            "node",
            "react",
            "react-addons-test-utils",
            "sinon"
        ]
    },
    "exclude": [
        "broken",
        "node_modules"
    ]
}
