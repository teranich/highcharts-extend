table
    thead
        tr
            th("*ngFor"="let header of baseHeaders; let headerIndex = index;")
                universal-table-headers("[headerData]"="headerIndex","[headerIndex]"="headerIndex")
    tbody
        tr('*ngFor'='let row of rows; let rowIndex = index')
            td('*ngFor'='let baseCell of row.cells; let cellIndex = index')
                universal-table-cell("[rowIndex]"="rowIndex", "[cellIndex]"="cellIndex")